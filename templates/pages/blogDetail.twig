{% extends "index.twig" %} 

{% block main %}
    <section class="container">
        {% set image = entry.previewImage.one() %}
        {% if image %}
            {% set options = {
                mode: 'crop',
                height: 550,
                width: 1100,
            } %}
            <img src="{{ image.getUrl(options) }}" alt="" class="card-img-top img-fluid">
        {% else %}
            <img src="https://via.placeholder.com/1500x600" width="100%" height="100%" alt="">
        {% endif %}
    </section>
    <main class="container mt-3">
        <div class="mb-5 mx-auto" style="width: 80%;">
            <h2 class="text-center font-weight-light pt-4">{{ entry.title }}</h2>
            <hr class="featurette-divider">
            {{ entry.richText }}
            <hr class="featurette-divider">
            <small class="font-italic">By {{ entry.author }} posted on {{ entry.postDate | date('M d, Y') }}</small>
        </div>
    </main>
{% endblock %}
