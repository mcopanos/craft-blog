{% extends "index.twig" %} 

{% block main %}
    <section class="container carousel-inner mb-5">
        <div class="container carousel-item active my-0 mx-auto">
            {% set image = entry.previewImage.one() %}
            {% if image %}
                {% set options = {
                    mode: 'crop',
                    height: 544,
                    width: 817,
                    quality: 75,
                    position: 'center-center'
                } %}
                <img src="{{ image.getUrl(options) }}" alt="" class="card-img-top img-fluid">
            {% else %}
                <img src="https://via.placeholder.com/1500x600" width="100%" height="100%" alt="">
            {% endif %}
        </div>
    </section>

    <main class="container">
        <div class="mb-5 mx-auto" style="width: 80%;">
            <h2 class="text-center font-weight-light mb-3">{{ entry.title }}</h2>
            {{ entry.richText }}
            <hr>
            <small class="font-italic">By {{ entry.author }} posted on {{ entry.postDate | date('M d, Y') }}</small>
        </div>
    </main>
{% endblock %}
