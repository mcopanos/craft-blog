{% extends "index.twig" %} 

{% block main %}
    <section class="carousel-inner mb-5">
        <div class="carousel-item active">
            <img src="https://via.placeholder.com/1500x600" width="100%" height="100%" alt="">
            <div class="container">
                <div class="carousel-caption text-center">
                    {# <p><a class="btn btn-lg btn-primary" href="#" role="button">Sign up today</a></p> #}
                </div>
            </div>
        </div>
    </section>

    <main class="container text-center">
        <div class="jumbotron">
            <h1 class="display-4">Hey, you!</h1>
            <p class="lead">Drop me a line, I'd love to hear from you!</p>
            <hr class="my-4">
            <form action="" class="form-group p-4">
                <div class="row justify-content-md-center my-lg-2">
                    <div class="col-sm-3">
                        <input type="text" class="form-control" placeholder="First name">
                    </div>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" placeholder="Last name">
                    </div>
                </div>
                <div class="row justify-content-md-center py-lg-3">
                    <div class="col-md-6">
                        <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                    </div>
                </div>
                <div class="row justify-content-md-center py-lg-3">
                    <div class="col-md-6">
                        <textarea class="form-control" aria-label="With textarea"></textarea>
                    </div>
                </div>
                <button class="btn btn-primary mt-3" role="button">Submit</button>
            </form>

        </div>
    </main>
{% endblock %}