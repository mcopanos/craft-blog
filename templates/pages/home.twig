  <!-- Instagram Posts feed -->
  <div class="container d-flex justify-content-center">
    <h2 class="display-4">My Insta Feed</h2>
  </div>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row d-flex align-items-center">
        {% for item in craft.instagram.getFeed() %}
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <img height="275px"  src="{{ item.src }}" alt="instagram photo">
              <div class="card-body">
                {% set caption = item.caption %}
                {% if caption %}
                  <p class="card-text">{{ caption|striptags|slice(0, 120) }}...</p>
                  <hr class="mt-3">
                {% endif %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                  <div class="btn-group">
                    <span class="text-muted"><i class="fas fa-heart px-2 text-danger"></i>{{ item.likes }} Likes</span>
                  </div>
                  <span class="text-muted"><i class="fas fa-comment-dots px-2 text-secondary"></i>{{ item.comments }} Comments</span>
                </div>
                <button type="button" class="btn btn-info btn-lg btn-block mt-4">Read More</button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>


